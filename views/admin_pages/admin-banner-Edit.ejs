                <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
                    <span class=" pr-3">
                        Edit Banner
                    </span>
                </h2>
                <div class="row px-xl-5 pb-3">
                    <div class="col-lg-12 col-md-12 col-sm-12 pb-1">
                        <form action="/admin/edit-banner" method="POST" enctype="multipart/form-data">

                          <div class="d-flex flex-row align-items-center mb-4">
                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                            <div class="form-outline flex-fill mb-0">
                                <label class="form-label" for="form3Example1c">title 1</label>
                                <input name="title" type="String" id="PhoneNo"  value=" <%=bannerItem.title%>"   class="form-control border" required/>
                            </div>
                        </div>   
                          <div class="d-flex flex-row align-items-center mb-4">
                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                            <div class="form-outline flex-fill mb-0">
                                <label class="form-label" for="form3Example1c">title 2</label>
                                <input name="title2" type="String" id="Facebook" value="<%=bannerItem.title2%>"  class="form-control border" required/>
                            </div>
                        </div>
                
                
                        <div class="form-row d-none">
                          <div class="form-group col-md-2">
                              <input type="text" class="form-control" id="title2" name="_id" value="<%=bannerItem._id%>" required>
                          </div>
                      </div>                       
                            <% if( bannerItem.home == 'true' ) { %>

                            <div class="form-group col-md-6">
                              <label for="inputState">Category</label>
                              <select id="inputState" name="category" class="form-control" required>
                                  <% if( Category.length> 0 ) { %>
                                      <% for( Category of Category ) { %>
                                  <option><%=Category.Category%></option>
                                  <% } %>
                               <% }%>
                              </select>
                          </div>

                          <% } else { %>
                            <div class="d-flex flex-row align-items-center mb-4">
                              <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                              <div class="form-outline flex-fill mb-0">
                                  <label class="form-label" for="form3Example1c">give a product link</label>
                                  <input name="productlink" type="String" id="Facebook" value="<%=bannerItem.productlink%>"  class="form-control border" required />
                              </div>
                          </div>

                            <% }%>

                            <div class="form-group">
                                <div class="form-group">
                                    <label for="image">Chooe an Image</label>
                                    <img src="/banner_image/<%=bannerItem.image%>" alt="" style="float: left; width: 200px; height: auto;" id="imgView[0]" >
                                    <input type="file" name="img" class="form-control-file" id="exampleFormControlFile1" multiple onchange="viewImage(event)">
                                </div>
                            </div>
                            <button  type="submit" class="btn btn-primary">Add</button>
                        </form>
                    </div>
                </div>
            </div>
