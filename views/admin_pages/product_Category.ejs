<div class="container">

  <a href="/admin/Addproduct" style="background-color:#EC407A ; color: white; " class=" btn btn"> ADD products</a>
</div>
  




    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                <h6 class="text-white text-capitalize ps-3">product table</h6>
              </div>
            </div>

            <div class="card-body px-0 pb-2">
              <div class="table-responsive p-0">

                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">product Name</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">quantity</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                        category</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                        description</th>
                      <th class="text-secondary opacity-7">edit</th>
                      <th class="text-secondary opacity-7">delete</th>
                    </tr>
                  </thead>
                  <tbody>

                    <% if( products.length> 0 ) { %>
                      <% for( products of products ) { %>

                        <tr>
                          <td>
                            <div class="d-flex px-2 py-1">
                              <div>
                                <img src="/product-images/<%=products.Images[0]%>"
                                  class="avatar avatar-sm me-3 border-radius-lg" alt="user1">
                              </div>
                              <div class="d-flex flex-column justify-content-center">
                                <h6 class="mb-0 text-sm">
                                  <%=products.title%>
                                </h6>
                                <p class="text-xs text-secondary mb-0">price:<%=products.price%>$</p>
                              </div>
                            </div>
                          </td>
                          <td>
                            <p class="text-xs font-weight-bold mb-0">
                              <%=products.quantity%>
                            </p>
                            <p class="text-xs text-secondary mb-0">quantity</p>
                          </td>
                          <td class="align-middle text-center text-sm">
                            <span class="text-secondary text-xs font-weight-bold">
                              <%=products.category%>
                            </span>
                          </td>
                          <td class="align-middle text-center">
                            <span class="text-secondary text-xs font-weight-bold">
                              <%=products.description%>
                            </span>
                          </td>
                          <td class="align-middle">
                            <a href="/admin/edit-product/<%= products._id %>" class="btn btn-secondary "
                              data-toggle="tooltip" data-original-title="Edit user">
                              Edit
                            </a>
                          </td>
                          <td class="align-middle">
                            <button 
                            onclick="deleteproduct('<%= products._id %>')"
                            class="btn btn-danger " data-toggle="tooltip" data-original-title="Edit user">
                            delete
                          </button>
                          </td>
                        </tr>
                        <% } %>
                          <% } else { %>
                            <div>
                              <h1>Add your products</h1>
                            </div>
                            <% }%>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
