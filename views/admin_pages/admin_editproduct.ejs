<div class="container-fluid pt-5 mt-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
        <span class=" pr-3">
            edit-product 
        </span>
    </h2>
    <div class="row px-xl-5 pb-3">
        <div class="col-lg-12 col-md-12 col-sm-12 pb-1">
            <form action="/admin/admin_edit-product/<%=product._id%>" method="POST" enctype="multipart/form-data">
                <div class="form-row">

                    <div class="form-group col-md-6">
                        <label for="inputEmail4">Product Title</label>
                        <input type="text" class="form-control" id="inputEmail4" name="title" placeholder="product name" value="<%=product.title%>" required>
                    </div>

                   
                    <div class="form-group col-md-6">
                      <label for="inputState">Category</label>
                      <select id="inputState" name="category" class="form-control" required>
                          <% if( Category.length> 0 ) { %>
                              <% for( Category of Category ) { %>
                          <option><%=Category.Category%></option>
                          <% } %>
                      <% } else { %>
                      <div>
                          <h1>null</h1>
                      </div>
                       <% }%>
                      </select>
                  </div>

                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Description</label>
                    <input class="form-control" id="exampleFormControlTextarea1" rows="3" name="description" value="<%=product.description%>"  required>
                        </input>
                </div>

                <div class="form-row">


                    <div class="form-group col-md-2">
                        <label for="inputZip">Quantity</label>
                        <input type="number" class="form-control" id="inputZip" name="quantity" value="<%=product.quantity%>" required>
                    </div>
                    
                    <div class="form-group col-md-2">
                        <label for="inputZip">Price</label>
                        <input type="number" class="form-control" id="inputZip" name="price" value="<%=product.price%>" required>
                    </div> 
                </div>
            
                <div class="form-group">
                    <div class="form-group">
                        <label for="image">Chooe an Image</label>
                        <img src="/product-Images/<%=product.Images[0]%>" alt="" style="float: left; width: 200px; height: auto;" id="imgView[0]">
                        <img src="/product-Images/<%=product.Images[1]%>" alt="" style="float: left; width: 200px; height: auto;" id="imgView[1]">
                        <img src="/product-Images/<%=product.Images[2]%>" alt="" style="float: left; width: 200px; height: auto;" id="imgView[2]">
                        <input type="file" name="img" class="form-control" id="exampleFormControlFile1" multiple onchange="viewImage(event)">
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        </div>
    </div>
</div>
  
<!-- /add product -->
<script>
    function viewImage(event){
        document.getElementById('imgView[0]').src=URL.createObjectURL(event.target.files[0])
        document.getElementById('imgView[1]').src=URL.createObjectURL(event.target.files[1])
        document.getElementById('imgView[2]').src=URL.createObjectURL(event.target.files[2])

    }
</script>


