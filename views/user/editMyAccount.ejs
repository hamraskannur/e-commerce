<%- include( '../includes/user_includes/head.ejs' ) %>
<%-include('../includes/user_includes/navegation.ejs')%>
<section class="vh-100" style="background-color: white;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100  mt-5">
            <div class="col-lg-12 col-xl-11">
                <div style="background-color: white;" class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Edit details</p>

                                   <form class="mx-1 mx-md-4" action="/editMydetails"  method="post" >

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example1c">Name</label>
                                            <input name="Name" type="text" id="username" class="form-control" value="<%=userdetails[0].Name%>" required />
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example3c">Email</label>
                                            <input name="Email" type="email" id="userEmail" value="<%=userdetails[0].Email%>"  class="form-control" required />
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button id="btn-submit" type="submit" class="btn btn-dark btn-lg">save</button>
                                    </div>

                                </form>

                            </div>
                         
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<script>
    $(document).ready(function () {
  
      $('#btn-submit').click(function () {
        $(".error").hide();
        var hasError = false;
        var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;
        var emailaddressVal = $("#userEmail").val();
        var PasswordVal = $("#userPassword").val();
        var usernameVal = $("#username").val();
        var confirmpasswordval = $("#confirmpassword").val();
        var userPhoneNo = $("#PhoneNo").val();

        if (emailaddressVal == '') {
          $("#userEmail").after('<span class="error text-danger">Please enter your email address.</span>');
          hasError = true;
        }
        if (usernameVal  == '') {
          $("#username").after('<span class="error text-danger">Please enter your password.</span>');
          hasError = true;
        }
        else if (!emailReg.test(emailaddressVal)) {
          $("#userEmail").after('<span class="error text-danger" >Enter a valid email address.</span>');
          hasError = true;
        }
        if (PasswordVal == '') {
          $("#userPassword").after('<span class="error text-danger">Please enter your password.</span>');
          hasError = true;
        }
        if (confirmpasswordval !== PasswordVal) {
          $("#confirmpassword").after('<span class="error text-danger">confirm password wrong.</span>');
          hasError = true;
        }
        if (userPhoneNo.length!==10 ) {
          $("#PhoneNo").after('<span class="error text-danger">Phone number wrong.</span>');
          hasError = true;
        }
       
        if (hasError == true) { return false; }
      });
    });
  </script>

  <%- include( '../includes/user_includes/end.ejs' ) %>