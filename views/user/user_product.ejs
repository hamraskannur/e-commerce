                    <i class="icon-close-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
                    Search
                </div>
            </div>
            
            <!-- Search product -->
            <div class="dis-none panel-search w-full p-t-10 p-b-15">
                <div class="bor8 dis-flex p-l-15">
                    <button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
                        <i class="zmdi zmdi-search"></i>
                    </button>

                    <input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="search-product" id="myproductsearch" onkeyup="myProductsearch()" placeholder="Search">
                </div>	
            </div>

            <!-- Filter -->
            <div class="dis-none panel-filter w-full p-t-10">
                <div class="wrap-filter flex-w bg6 w-full p-lr-40 p-t-27 p-lr-15-sm">
                    <div class="filter-col1 p-r-15 p-b-27">
                        <div class="mtext-102 cl2 p-b-15">
                            category
                        </div>
                        <ul>
                            
                            <% if( Categorysub.length> 0 ) { %>
                                <% for( Categorysub of Categorysub ) { %>
                                    <li class="p-b-6">
                                        <a onclick="getproductCategory('<%=Categorysub.Category%>')" class="filter-link stext-106 trans-04">
                                            <%=Categorysub.Category%></a>

                                        </a>
                                    </li>
                            <% } %>
                            <% }%>
                        </ul>
                    </div>

                    <div class="filter-col2 p-r-15 p-b-27">
                        <div class="mtext-102 cl2 p-b-15">
                            Price
                        </div>

                        <ul>
                            <li class="p-b-6">
                                <a href="/" class="filter-link stext-106 trans-04 filter-link-active">
                                    All
                                </a>
                            </li>

                            <li class="p-b-6">
                                <a onclick="priceproductsort('0','500')" class="filter-link stext-106 trans-04">
                                    <i class="bi bi-currency-rupee"></i>0 - <i class="bi bi-currency-rupee"></i>500
                                </a>
                            </li>

                            <li class="p-b-6">
                                <a onclick="priceproductsort('500','1000')" class="filter-link stext-106 trans-04">
                                    <i class="bi bi-currency-rupee"></i>500 - <i class="bi bi-currency-rupee"></i>1000
                                </a>
                            </li>

                            <li class="p-b-6">
                                <a onclick="priceproductsort('1000','1500')" class="filter-link stext-106 trans-04">
                                    <i class="bi bi-currency-rupee"></i>1000 - <i class="bi bi-currency-rupee"></i>1500
                                </a>
                            </li>

                            <li class="p-b-6">
                                <a onclick="priceproductsort('1500','2000')" class="filter-link stext-106 trans-04">
                                    <i class="bi bi-currency-rupee"></i>1500 - <i class="bi bi-currency-rupee"></i>2000
                                </a>
                            </li>

                            <li class="p-b-6">
                                <a onclick="priceproductsort('2000','5000')" class="filter-link stext-106 trans-04">
                                    <i class="bi bi-currency-rupee"></i>2000 - <i class="bi bi-currency-rupee"></i>5000
                                </a>
                            </li>
                        </ul>
                    </div>

            
                
                </div>
            </div>
        </div>

   
        <div id="productId" class="row isotope-grid">
				
            <% if( products.length> 0 ) { %>
                <% for( p of products ) { %>
            <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
                <!-- Block2 -->
                
                <div class="block2">
                    <div class="block2-pic hov-img0">
                        <img src="/product-images/<%=p.Images[0]%>" alt="IMG-PRODUCT">

                        <button onclick="Addtocart('<%=p._id%>')" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 ">
                         Add to Cart
                        </button>
                    </div>

                    <div class="block2-txt flex-w flex-t p-t-14">
                        <div class="block2-txt-child1 flex-col-l ">
                            <a href="/viewsOneproduct/<%=p._id%>" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                <%=p.title%>
                            </a>

                            <a href="/viewsOneproduct/<%=p._id%>" class="stext-105 cl3">
                                <%=p.price%>
                            </a>
                        </div>

                            <% let flag=false %>
                            <% if( wishlist) { %>
                            <% for( i=0 ; i < wishlist.items.length ; i++ ) { %>
                           <% if( wishlist.items[i].productId==p._id) { %>
                           <% flag=true %>
                           <% } %>
                           <% } %>
                           <% } %>
                            <div class="block2-txt-child2 flex-r p-t-3">
                                <% if( flag===true) { %>
                                    
                                    <img onclick="deleteWishlistProduct('<%=p._id%>','<%=p.title%>')" class="icon-heart dis-block " src="/user/images/icons/icon-heart-02.png"alt="ICON">
                              <% } else { %>
                                    <a onclick="addwishlist('<%=p._id%>','<%=p.title%>')" class="btn-addwish-b2 dis-block pos-relative ">
                                    <img id="addwishlistchange" class="icon-heart dis-block "src="/user/images/icons/icon-heart-01.png" alt="ICON"></a>
                               <% } %>
                                 
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
          
            <% }%>
        </div>


        <!-- Load more -->
     
    </div>
</div>
    



