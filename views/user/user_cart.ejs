<!-- Shoping Cart -->
<form class="bg0 p-t-75 p-b-85">
	<div class="container ">
		<div class="row">
			<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
				<div class="m-l-25 m-r--38 m-lr-0-xl">
					<div class="wrap-table-shopping-cart">
						<table class="table-shopping-cart">
							<tr class="table_head">
								<th class="column-1">Product</th>
								<th class="column-2"></th>
								<th class="column-3">Price<i
									class="bi bi-currency-rupee"></i></th>
								<th class="column-4">Quantity</th>
								<th class="column-5">Total<i
									class="bi bi-currency-rupee"></i></th>
								<th class="column-6">Quantity</th>
							</tr>
							<% if( data ) { %>

								<% for(element of data.items) { %>

									<tr class="table_row">
										<td class="column-1">
											<div class="how-itemcart1">
												<img src="/product-images/<%=element.images[0]%>" alt="IMG">
											</div>
										</td>
										<td class="column-2">
											<%=element.name%>
										</td>
										<td class="column-3" id="<%=element.productId%>unitPrice"><%=element.price%></td>
										<td class="column-4">
											<div class="wrap-num-product flex-w m-l-auto m-r-0">
												<button type="button"
													onclick="cartquantitydec('<%=element.productId%>')"
													class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
													<i class="fs-16 zmdi zmdi-minus"></i>
												</button>
												<input class="mtext-104 cl3 txt-center num-product" id="<%=element.productId%>quantity"
													type="number" name="num-product1" value="<%=element.quantity%>">

												<button type="button"
													onclick="cartquantityinc('<%=element.productId%>')"
													class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">

													<i class="fs-16 zmdi zmdi-plus"></i>
												</button>
											</div>
										</td>
										<td class="column-5" id="<%=element.productId%>totalPrice"><%=element.price*element.quantity%></td>
										<td class="column-6"><button type="button" onclick="deletetoAdd('<%=element.productId%>','<%=element.name%>')" class="btn btn-dark ">remove</button></td>

									</tr>
									<% } %>
										<% }%>

						</table>
					</div>

					<div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
						<div class="flex-w flex-m m-r-20 m-tb-5">
							<input id="ApplyCoupon" class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text" name="ApplyCoupon" placeholder="Coupon Code">
							<div onclick="ApplyCoupon()" class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5">
								Apply coupon
							</div>
						</div>

						
					</div>
				</div>
			</div>

			<div class="col-sm-10 col-lg-7 col-xl-5  m-lr-auto m-b-50 col-xs-6">
				<div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm col-xs-6">
					<h4 class="mtext-109 cl2 p-b-30">
						Cart Totals
					</h4>

					<div class="flex-w flex-t bor12 p-b-13">
							<div class="size-208">
								<span class="stext-110 cl2">
									Subtotal:
								</span>
							</div>

							<div class="size-209">
								<span class="mtext-110 cl2">
									$79.65
								</span>
							</div>
						</div>

					<% if( Addres ) { %>

						<div class="flex-w flex-t bor12 p-t-15 p-b-30">
							<div class="size-208 w-full-ssm">
								<span class="stext-110 cl2">
									Name:
								</span>
							</div>

							<div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
								<p class="stext-111 cl6 p-t-2">
									<%=Addres.userdetails.Name%>
								</p>
							</div>
							<div class="size-208 w-full-ssm">
								<span class="stext-110 cl2">
									phone no:
								</span>
							</div>

							<div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
								<p class="stext-111 cl6 p-t-2">
									<%=Addres.userdetails.PhoneNo%>
								</p>
							</div>
							<div class="size-208 w-full-ssm">
								<span class="stext-110 cl2">
									Payment:
								</span>
							</div>
							<fieldset class="form-group">
								<div class="row">
									<div class="col-sm-10">
										<div class="form-check">
											<input class="form-check-input bg-dark" type="radio" name="gridRadios"
												id="gridRadios1" value="option1" checked>
											<div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
												<p class="stext-111 cl6 p-t-2">
													<%=Addres.userdetails.Payment%>
												</p>
											</div>
										</div>

									</div>
								</div>
							</fieldset>
							<div class="size-208 w-full-ssm">
								<span class="stext-110 cl2">
									addres:
								</span>
							</div>
							<div class="size-209 p-r-18 p-r-0-sm w-full-ssm ">
								<p class="stext-111 cl6 p-t-2">
									<%=Addres.userdetails.Address%>
								</p>
							</div>
							<% }%>

								<div class="size-209 p-r-18 p-r-0-sm w-full-ssm">


									<div class="p-t-15 ">

										<div class="flex-w">
											<a href="/checkoutAddress"
												class="flex-c-m stext-101 cl2 size-115 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer ">
												Update Address
											</a>
										</div>

									</div>
								</div>
						</div>

						<div class="flex-w flex-t p-t-27 p-b-33">
							<div class="size-208">
								<span class="mtext-101 cl2">
									Total:<i class="bi bi-currency-rupee"></i>
								</span>
							</div>
							<% if( data ) { %>
								<div id="CouponTotal"  class="size-209 p-t-1 ">

								<div class="size-209 p-t-1">
									<span id="totalbill"  class="mtext-110 cl2"><%=data.bill%></span>
								</div>
									<div >
										<span   style="margin-left:7.5rem  ;" class="mtext-110 cl2"></span>
									</div>
									<hr style="color: black;">
	
									<div >
										<span   style="margin-left:7.5rem ;" class="mtext-110 cl2"></span>
									</div>
								</div>
								
								<% }%>

						</div>
						<!-- //href="/Checkout"  -->
						<button id="usercheckout" type="button" onclick="checkout()"class="btn btn-dark flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
							Proceed to Checkout
						</button>
						<%=Checkouterrmes%>
						
				</div>
			</div>
		</div>
	</div>
</form>

