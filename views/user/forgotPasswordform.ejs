<%-include('../includes/user_includes/navegation.ejs')%>


<div style="margin-top: 10rem;" class="container height-100 d-flex justify-content-center align-items-center">
    <form action="/forgotPasswordpost" method="post">
    <div class="position-relative">
        <div class="d-flex flex-row align-items-center mb-4">
            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
            <div class="form-outline flex-fill mb-0">
                <label class="form-label" for="form3Example4c">Password</label>
                <input name="Password" type="password" id="userPassword" class="form-control" required />  
             </div>
        </div>

        <div class="d-flex flex-row align-items-center mb-4">
            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
            <div class="form-outline flex-fill mb-0">
                <label class="form-label" for="form3Example4c">confirm password</label>
                <input name="confirmpassword" type="password" id="confirmpassword" class="form-control" required />                                        </div>
        </div>
        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
          <button id="btn-submit" type="submit" class="btn btn-dark btn-lg">submit</button>
      </div>
    </div>
</form>
</div>

<script>
    $(document).ready(function () {
  
      $('#btn-submit').click(function () {
        $(".error").hide();
        var hasError = false;
        var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;
        var PasswordVal = $("#userPassword").val();
        var confirmpasswordval = $("#confirmpassword").val();

    
        if (PasswordVal  == '') {
          $("#userPassword").after('<span class="error text-danger">Please enter your password.</span>');
          hasError = true;
        }
        if (confirmpasswordval  == '') {
          $("#confirmpassword").after('<span class="error text-danger">Please enter your confirm password.</span>');
          hasError = true;
        }
        if (confirmpasswordval !== PasswordVal) {
          $("#confirmpassword").after('<span class="error text-danger">confirm password wrong.</span>');
          hasError = true;
        }
     
        if (hasError == true) { return false; }
      });
    });
  </script>

