
<%- include( '../includes/user_includes/head.ejs' ) %>
<%-include('../includes/user_includes/navegation.ejs')%>



<section class="vh-100" style="background-color:white;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card shadow-2-strong" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
  
              <h3 class="mb-5">login in</h3>
  
              <div class="form-outline mb-4">
                <label class="form-label"   for="typeEmailX-2">Email</label>
                <input type="email"   id="loginEmail"  name="Email"  class="form-control form-control-lg" />
              </div>
  
              <div class="form-outline mb-4">
                <label class="form-label"   for="typePasswordX-2">Password</label>
                <input  name="Password" type="Password" id="loginPassword"class="form-control form-control-lg" />
              </div>
  
              <!-- Checkbox -->
              
              <div id="loginerr"><%=loginErr%></div>

              <button onclick="getlogin()" id="btn-submit" type="button" class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
  
              <hr class="my-4">
  
              <button class="btn btn-dark btn-lg btn-block" 
                type="submit"> <a class="text-white" href="/signup"> creat new Account?</a></button>
             
  
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


<%- include( '../includes/user_includes/end.ejs' ) %>




<script>
    $(document).ready(function () {
  
      $('#btn-submit').click(function () {
        $(".error").hide();
        var hasError = false;
        var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;
        var emailaddressVal = $("#loginEmail").val();
        var PasswordVal = $("#loginPassword").val();
        if (emailaddressVal == '') {
          $("#loginEmail").after('<span class="error text-danger">Please enter your email address.</span>');
          hasError = true;
        }
         if (!emailReg.test(emailaddressVal)) {
          $("#loginEmail").after('<span class="error text-danger" >Enter a valid email address.</span>');
          hasError = true;
        }
        if (PasswordVal == '') {
          $("#loginPassword").after('<span class="error text-danger">Please enter your password.</span>');
          hasError = true;
        }
        if (hasError == true) { return false; }
      });
    });
  </script>