<%- include( '../includes/user_includes/head.ejs' ) %>
<%-include('../includes/user_includes/navegation.ejs')%>
	<!-- Shoping Cart -->


	<div class="container mt-5">

		<div class="py-3 py-md-5 bg-light mt-5">
			<div class="container">
		
				<div class="row">
					<div class="col-md-12">
						<div class="shopping-cart">
	
							<div class="cart-header d-none d-sm-none d-mb-block d-lg-block">
								<div class="row">
									<div class="col-md-6">
										<h4>Products</h4>
									</div>
									<div class="col-md-2">
										<h4>Price</h4>
									</div>
									<div class="col-md-2">
										<h4>Add to cart</h4>
									</div>
								
									<div class="col-md-2">
										<h4>Remove</h4>
									</div>
								</div>
							</div>
							<% for(element of wishlist.items) { %>
	
							<div class="cart-item mt-5">
								<div class="row">
									<div class="col-md-6 my-auto">
										<a >
											<label class="product-name">
												<img src="/product-images/<%=element.images[0]%>" style="width: 50px; height: 50px" alt="">
												<%=element.name%>
											</label>
										</a>
									</div>
									<div class="col-md-2 my-auto">
										<label class="price"> <%=element.price%></label>
									</div>
								   
									<div class="col-md-2 col-5 my-auto">
										<div onclick="Addtocart('<%=element.productId%>')" class="remove">
											<button class="btn btn-dark btn-sm">
												Add to cart
											</button>
										</div>
									</div>
									<div class="col-md-2 col-5 my-auto">
										<div class="remove">
											<button  type="button" onclick="deleteWishlistProduct('<%=element.productId%>','<%=element.name%>')"  class="btn btn-dark btn-sm">
												<i class="fa fa-trash"></i> Remove    
											</button>
										</div>
									</div>
								</div>
								<hr>
							</div>
							<% } %>
	
									
						</div>
					</div>
				</div>
	
			</div>
		</div>
	</div>
	
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
	</body>
	<%- include( '../includes/user_includes/footer.ejs' ) %>

    <%- include( '../includes/user_includes/end.ejs' ) %>
    
